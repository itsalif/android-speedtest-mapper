<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MarginedRootView" 
    tools:context=".AboutAppActivity" 
>

    <TextView
        style="@style/AboutView.Info"
        android:text="@string/txt_about_info"
        
        android:id="@+id/txt_about_info"                
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"    
     />
    
    <TextView
        style="@style/AboutView.Info"
        android:text="@string/txt_author_info"
        
        android:id="@+id/txt_author_info"                
        android:layout_below="@id/txt_about_info"
        android:layout_alignParentLeft="true"    
     />    
    
    <Button
        style="@style/AboutView.Button"
        android:id="@+id/btn_license_info"
        android:text="@string/lbl_license_info"
        
        android:layout_alignParentBottom="true"           
     />    
     

    <Button
        style="@style/AboutView.Button"
        android:id="@+id/btn_google_play_apps"
        
        android:text="@string/lbl_apps_list"
        android:layout_above="@id/btn_license_info"            
     />    
    
    

</RelativeLayout>